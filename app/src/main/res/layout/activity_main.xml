<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_1"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_margin="20dp"

        />

    <Button
        android:id="@+id/button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_2"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_1"
        />

    <Button
        android:id="@+id/button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_3"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_2"
        />

    <Button
        android:id="@+id/button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_4"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_3"
        />

    <Button
        android:id="@+id/button_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_5"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_4"
        />

    <Button
        android:id="@+id/button_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_6"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_5"
        />

    <Button
        android:id="@+id/button_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video_7"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_below="@+id/button_6"
        />


</RelativeLayout>